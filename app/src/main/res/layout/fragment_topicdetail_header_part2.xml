<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_join_topic"
            style="@style/topic_detail_header_join_ly"
            android:layout_marginLeft="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_join_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/add_topic_pink"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_join_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/common_title_size" />
        </LinearLayout>

        <com.moinapp.wuliao.widget.LikeLayout
            android:id="@+id/like_layout"
            style="@style/topic_detail_header_join_ly"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_weight="1"
            android:background="@drawable/topic_pink_button"
            android:clickable="true"
            app:likeTxtColor="@color/moin"
            app:likeTxtSize="@dimen/common_title_size" />
    </LinearLayout>

    <com.moinapp.wuliao.ui.ExpandableTextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15"
        android:background="@color/common_white"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal"
        app:animAlphaStart="1"
        app:collapseDrawable="@drawable/extpandtv_collapse"
        app:expandDrawable="@drawable/extpandtv_expand"
        app:maxCollapsedLines="2">

        <TextView
            android:id="@id/expandable_text"
            style="@style/common_text_content_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.2" />

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@android:color/transparent" />

    </com.moinapp.wuliao.ui.ExpandableTextView>

    <include layout="@layout/split_line_horizontal" />

    <include layout="@layout/layout_title_down_grey_area" />

    <RelativeLayout
        android:id="@+id/ly_article"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/article_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:drawableLeft="@drawable/post_topic_black"
            android:drawablePadding="@dimen/margin_normal"
            android:text="@string/article_list"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/common_title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_normal"
            android:src="@drawable/small_arrow_gray" />
    </RelativeLayout>

    <include layout="@layout/split_line_horizontal" />

    <RelativeLayout
        android:id="@+id/ly_pic"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/cosplay_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:drawableLeft="@drawable/picture_topic_black"
            android:drawablePadding="@dimen/margin_normal"
            android:text="图片专区"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/common_title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_normal"
            android:src="@drawable/small_arrow_gray" />
    </RelativeLayout>

    <include layout="@layout/split_line_horizontal" />

    <RelativeLayout
        android:id="@+id/rl_users"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small">

            <include
                android:id="@+id/avatar0"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar1"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar2"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar3"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar4"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar5"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar6"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar7"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar8"
                layout="@layout/join_user_avatar" />

            <include
                android:id="@+id/avatar9"
                layout="@layout/join_user_avatar" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_normal"
            android:src="@drawable/small_arrow_gray" />
    </RelativeLayout>

    <include layout="@layout/split_line_horizontal" />

    <LinearLayout
        android:id="@+id/ly_hot_article_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <include layout="@layout/split_line_horizontal" />

    <include layout="@layout/layout_title_down_grey_area" />

</LinearLayout>
