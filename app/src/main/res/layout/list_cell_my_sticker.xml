    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:paddingLeft="@dimen/margin_normal"
            android:paddingTop ="@dimen/margin_normal"
            android:id="@+id/sticker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贴纸标题"
            style="@style/common_text_title" />
        <LinearLayout
            android:paddingTop="@dimen/margin_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <com.keyboard.view.RoundAngleImageView
                android:id="@+id/iv_sticker_1"
                app:roundHeight="3dp"
                app:roundWidth="3dp"
                style="@style/my_sticker_image_view" />

            <com.keyboard.view.RoundAngleImageView
                android:id="@+id/iv_sticker_2"
                app:roundHeight="3dp"
                app:roundWidth="3dp"
                style="@style/my_sticker_image_view" />
