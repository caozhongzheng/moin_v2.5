<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_big"
    android:paddingRight="@dimen/margin_big"
    android:paddingBottom="@dimen/margin_big">

    <ImageView
        android:id="@+id/iv_tag_image"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/pic_bg" />

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="黑猫警长"
        android:maxLines="2"
        style="@style/common_text_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_tag_image"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_tag_name"
        android:layout_marginTop="@dimen/margin_big">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tag_pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_img"
                android:layout_marginRight="@dimen/margin_normal" />

            <TextView
                android:id="@+id/iv_tag_picnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123张"
                style="@style/common_text_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tag_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_like_new_small"
                android:layout_marginRight="@dimen/margin_normal" />

            <TextView
                android:id="@+id/tv_tag_like_num"
                android:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/common_text_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>