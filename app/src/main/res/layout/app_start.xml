<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_start_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/welcome_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/welcome_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/jump_margin"
        android:layout_marginTop="@dimen/jump_margin"
        android:background="@drawable/skip_bg"
        android:gravity="center"
        android:text="@string/jump"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>