<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_small">

    <com.moinapp.wuliao.widget.AvatarView
        android:id="@+id/emoji_cover"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:src="@drawable/default_img"
        android:background="@color/common_white"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emoji_cover"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/emojiset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/common_text_title"
            android:text="表情专辑标题" />

        <LinearLayout
            android:id="@+id/emoji_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_smaller">

            <TextView
                android:id="@+id/emoji_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张数:"
                style="@style/common_text_small" />
            <TextView
                android:id="@+id/emoji_update"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="更新时间:"
                style="@style/common_text_small" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>