<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="184dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/modou_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.moinapp.wuliao.ui.RiseNumberTextView
                android:text="@string/mission_succeed"
                android:layout_marginTop="@dimen/space_28"
                android:textColor="#ffb51f"
                android:textSize="43sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/rise_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_task_succeed"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="分享成功"
            android:background="@drawable/shape_moin_bean_award"
            android:layout_width="142dp"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/tv_task_complete"
            android:layout_marginTop="42dp"
            android:text="@string/mission_complete"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_award_num"
            android:text="@string/mission_award"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>