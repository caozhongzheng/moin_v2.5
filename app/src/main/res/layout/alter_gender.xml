<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/transparent"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/common_white">

        <ImageView
            android:id="@+id/alter_sex_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/header_padding_left"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/margin_smaller"
            android:src="@drawable/return_key_black" />

        <TextView
            android:id="@+id/title_center"
            style="@style/common_text_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="性别修改" />

    </RelativeLayout>

    <include layout="@layout/split_line_horizontal" />

    <LinearLayout
        android:id="@+id/alter_sex_male"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_space_view_height"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <ImageView
            android:id="@+id/iv_sex_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/male_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_space_view_height"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_normal"
            android:text="汪星人 · 男"
            android:textColor="@color/common_title_grey"
            android:textSize="@dimen/txt_size_30px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_normal"
        android:background="@color/title_down_line" />

    <LinearLayout
        android:id="@+id/alter_sex_female"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_space_view_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <ImageView
            android:id="@+id/iv_sex_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/female_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_space_view_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_normal"
            android:text="喵星人 · 女"
            android:textColor="@color/common_title_grey"
            android:textSize="@dimen/txt_size_30px" />

    </LinearLayout>

    <include layout="@layout/split_line_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
