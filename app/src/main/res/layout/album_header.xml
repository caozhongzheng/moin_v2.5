<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_bar_height"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tv_left"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/margin_normal">

        <TextView
            android:id="@+id/tv_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
 
        <ImageView
            android:id="@+id/tv_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/return_key_black"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/cosplay_photoAlbum"
            android:textColor="@color/black"
            android:textSize="@dimen/t_18"
            android:maxLength="12" />

        <ImageView
            android:id="@+id/select_album_img"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/down_picture"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tv_right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/header_padding_right"
        android:minWidth="32dp">

        <TextView
            android:id="@+id/tv_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="继续"
            android:textSize="@dimen/common_title_size"
            android:textColor="@color/color_album_text"
            android:paddingTop="@dimen/margin_smaller"
            android:paddingRight="@dimen/margin_smaller"
            android:paddingBottom="@dimen/margin_smaller"
            />

    </RelativeLayout>

</RelativeLayout>