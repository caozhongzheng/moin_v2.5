                        android:background="@color/title_down_line" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_likes_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height"
                    android:layout_below="@id/rl_comments_user_space"
                    android:background="@color/common_white">

                    <ImageView
                        android:id="@+id/iv_like_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/good_space" />

                    <TextView
                        android:id="@+id/tv_like_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/height_68px"
                        android:text="我的赞"
                        android:textColor="@color/common_title_grey"
                        android:textSize="@dimen/txt_size_30px" />


                    <ImageView
                        android:id="@+id/iv_array_like_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/next_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="46.5dp"
                        android:background="@color/title_down_line" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_normal"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:id="@+id/rl_setting_user_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_space_view_height"
                android:layout_marginBottom="@dimen/margin_normal"
                android:background="@color/common_white">

                <ImageView
                    android:id="@+id/iv_setting_user_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:src="@drawable/set_space" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/height_68px"
