                        android:textColor="@color/common_text_light"
                        android:textSize="@dimen/txt_size_26px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/iv_tag_user_space"
                        android:layout_marginTop="46dp"
                        android:background="@color/title_down_line" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_follows_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height"
                    android:layout_below="@id/rl_tags_user_space"
                    android:background="@color/common_white">

                    <ImageView
                        android:id="@+id/iv_follow_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/attent_space" />

                    <TextView
                        android:id="@+id/tv_follows_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/height_68px"
                        android:text="关注"
                        android:textColor="@color/common_title_grey"
                        android:textSize="@dimen/txt_size_30px" />


                    <ImageView
                        android:id="@+id/iv_array_follow_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/next_gray" />

                    <TextView
                        android:id="@+id/tv_follow_num_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/iv_array_follow_user_space"
                        android:gravity="center"
                        android:textColor="@color/common_text_light"
                        android:textSize="@dimen/txt_size_26px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/iv_follow_user_space"
                        android:layout_marginTop="46dp"
                        android:background="@color/title_down_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fans_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height"
                    android:layout_below="@id/rl_follows_user_space"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_fans_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/fans_space" />

                    <TextView
                        android:id="@+id/tv_fans_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/height_68px"
                        android:text="粉丝"
                        android:textColor="@color/common_title_grey"
                        android:textSize="@dimen/txt_size_30px" />


                    <ImageView
                        android:id="@+id/iv_array_fans_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/next_gray" />

                    <TextView
                        android:id="@+id/tv_fan_num_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/iv_array_fans_user_space"
                        android:gravity="center"
                        android:textColor="@color/common_text_light"
                        android:textSize="@dimen/txt_size_26px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="46.5dp"
                        android:background="@color/title_down_line" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_normal"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:background="@color/common_white">

                <RelativeLayout
                    android:id="@+id/rl_pics_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height">

                    <ImageView
                        android:id="@+id/iv_pics_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/picture_space" />

                    <TextView
                        android:id="@+id/tv_pics_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/height_68px"
                        android:text="我的图片"
                        android:textColor="@color/common_title_grey"
                        android:textSize="@dimen/txt_size_30px" />


                    <ImageView
                        android:id="@+id/iv_array_pics_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/next_gray" />

                    <!--<TextView-->
                    <!--android:id="@+id/tv_pics_num_user_space"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toLeftOf="@id/iv_array_pics_user_space"-->
                    <!--android:gravity="center"-->
                    <!--android:textColor="@color/common_text_light"-->
                    <!--android:textSize="@dimen/txt_size_26px" />-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/iv_pics_user_space"
                        android:layout_marginTop="46dp"
                        android:background="@color/title_down_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_stickers_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height"
                    android:layout_below="@id/rl_pics_user_space">

                    <ImageView
                        android:id="@+id/iv_stickers_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/sticker_space" />

                    <TextView
                        android:id="@+id/tv_stickers_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/height_68px"
                        android:text="我的贴纸"
                        android:textColor="@color/common_title_grey"
                        android:textSize="@dimen/txt_size_30px" />


                    <ImageView
                        android:id="@+id/iv_array_stickers_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/next_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/iv_stickers_user_space"
                        android:layout_marginTop="46dp"
                        android:background="@color/title_down_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_comments_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height"
                    android:layout_below="@id/rl_stickers_user_space">

                    <ImageView
                        android:id="@+id/iv_comment_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:src="@drawable/comment_space" />

                    <TextView
                        android:id="@+id/tv_comments_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/height_68px"
                        android:text="我的评论"
                        android:textColor="@color/common_title_grey"
                        android:textSize="@dimen/txt_size_30px" />


                    <ImageView
                        android:id="@+id/iv_array_comments_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/next_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignLeft="@id/iv_comment_user_space"
