                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_normal"
                    android:src="@drawable/next_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="46.5dp"
                    android:background="@color/title_down_line" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_normal"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:background="@color/common_white">

                <RelativeLayout
                    android:id="@+id/rl_tags_user_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_space_view_height"
                    android:background="@color/common_white">

                    <ImageView
                        android:id="@+id/iv_tag_user_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
