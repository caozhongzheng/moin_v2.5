<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.moinapp.wuliao.ui.CommonTitleBar
        android:id="@+id/title_layout"
        style="@style/head_default"
        app:leftBtnIcon="@drawable/return_key_black"
        app:rightBtnTxt="@string/goon"
        app:titleTxt="@string/crop_cosplay"
        app:titleColor="@android:color/white"
        app:bgColor="@android:color/black"
        app:rightBtnColor="@color/moin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.imagezoom.ImageViewTouch
            android:id="@+id/crop_image"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_40"
            android:background="@color/black"
            android:scaleType="fitCenter" />
    </RelativeLayout>

</LinearLayout>