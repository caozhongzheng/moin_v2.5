<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_activity_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:text="22小时前"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ll_item_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ac_pop"
        android:orientation="vertical">

        <include layout="@layout/user_activity_item_cosplay" />

        <include layout="@layout/user_activity_item_comment" />

        <include layout="@layout/user_activity_item_like" />

        <include layout="@layout/user_activity_item_follow" />

        <include layout="@layout/user_activity_item_systemmsg" />

    </LinearLayout>
</LinearLayout>