<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_toolbtn"
    android:layout_width="@dimen/bar_width"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/bar_icon_height"
            android:layout_height="@dimen/bar_icon_height"
            android:scaleType="centerInside"
            android:src="@drawable/emojiset_icon_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="黑猫警长"
            android:textColor="#333"
            android:textSize="@dimen/bar_tv_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_flag"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/notification"
        android:visibility="gone" />

    <!--
    <include
        layout="@layout/ic_spitview_vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />
-->

</RelativeLayout>
